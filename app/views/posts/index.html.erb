<p id="notice"><%= notice %></p>

<h3>Listing Last 5 Posts</h3>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Content</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    
    <br></br>
    
    


    <% @last_five_posts.each do |post| %>
      <tr class="<%= post.id %>">
        <td><%= post.name %></td>
        <td><%= post.content %></td>
        <td><%= post.date %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, remote: true, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      
    <% end %>

  </tbody>

</table>


